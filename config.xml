<?xml version='1.0' encoding='utf-8'?>
<widget id="by.expresspizza.expresspizza" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"">
    <name>Express Pizza</name>
    <description>
        Доставка пиццы на дом и в офис в Минске. Пиццы, пироги, салаты, соки и напитки.
    </description>
    <author email="ilovefiniki.com@gmail.com" href="https://express-pizza.by">
        Express Pizza
    </author>

 

    <!-- Core plugins -->
    <plugin name="cordova-plugin-console"     spec="~1.0.2" />
    <plugin name="cordova-plugin-statusbar"   spec="~2.1.2" />
    <plugin name="cordova-plugin-whitelist"   spec="~1.2.1" />



<content src="index.html" />
<access origin="*" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />

<platform name="android">
<preference name="android-minSdkVersion" value="14" />
<allow-intent href="market:*" />
</platform>

<platform name="ios">
<allow-intent href="itms:*" />
<allow-intent href="itms-apps:*" />
<preference name="BackupWebStorage" value="none" />
</platform>

</widget>
